<%= form_for toyuser, url: rental_path do |f| %>
  <%= f.label(:toy_rental_date) %>
  <%= f.date_field(:toy_rent_date, min: Date.today, required: true) %><br>
  <%= f.label("Uncheck the box, if the toy isn't functioning correctly") %>
  <%= f.check_box(:functional) %>
  <br/>
  <%= f.submit('Rent') %>
<% end %>
