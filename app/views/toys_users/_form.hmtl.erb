<%= form_for @toyuser, url: toy_rental_path do |f| %>
  <%= f.label(:toy_rental_date) %>
  <%= f.text_field(:toy_rent_date, value: Date.today.strftime("%a. %B %d, %Y"), required: true ) %><br>
  <%= f.label("Uncheck the box, if the toy isn't functioning correctly") %>
  <%= f.check_box(:functional) %>
  <%= f.hidden_field(:toy_id, value: @toyuser.toy.id) %><br>
  <%= f.hidden_field(:user_id, value: current_user.id) %><br>
  <%= f.submit('Rent') %>
<% end %>
